<%- include("header") %>
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6"><h2>Products </h2></div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Add to Cart</th>
            </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i < product.length; i++) { %>
                <tr>
                    <td><%= product[i].name %></td>
                    <td><%= product[i].price %></td>
                    <td><%= product[i].description %></td>
                    <td>
                        <form action="add-to-cart" method="POST">
                            <input type="hidden" value="<%= product[i].id %>" name="id"></hidden>
                            <button type="button" class="btn btn-sm manage">ADD</button>
                        </form>
                    </td>
                </tr>
            <% } %>

            </tbody>
        </table>
    </div>
</div>
